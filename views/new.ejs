<% include layout/header %>

<div class="jumbotron jumbotron-fluid bg-primary">
    <div class="container">
        <h1 class="text-center display-4">Add a new campground</h1>
    </div>
</div>

<nav class="container nav nav-pills p-3 p-sm-5">
    <div class="nav-item"></div>
    <a class="nav-link m-2" href="/">Home</a>
    <a class="nav-link m-2" href="/campgrounds">Campgrounds</a>
    <a class="nav-link active m-2" href="/new">Add new camp</a>
</nav>

<div class="container">
        <form action="/addNewCamp" method="POST">
            <div class="form-group">
                <div class="col-12 col-md-6 m-2 ">
                    <label for="newCampName">Campground</label>
                    <input class="form-control" type="text" name="newCampName" placeholder="enter the camp name">
                </div>
                <div class="col-12 col-md-6 m-2 mt-4">
                    <label for="newCampName">Place</label>
                    <input class="form-control" type="text" name="newCampImage" placeholder="enter an image url">
                </div>
                <div class="col ml-2 mt-5">
                    <button type="submit" class="btn btn-outline-light">Add a camp</button>
                </div>
                
            </div>
        </form>
 
    
</div>


