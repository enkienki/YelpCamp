<% include ../layout/header %>

<!-- hero -->
<div class="jumbotron jumbotron-fluid bg-info">
    <div class="container">
        <h1 class="display-4">Edit <span class="font-italic"><%= campground.name %></span> campground</h1>
    </div>

</div>
<!-- form -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 align-self-center">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="col-lg-10 col-12 m-2 ">
                        <label for="newCampName">Campground</label>
                        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                    </div>
                    <div class="col-lg-10 col-12 m-2 mt-4">
                        <label for="newCampImage">Picture</label>
                        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                    </div>
                    <div class="col-12 m-2 mt-4">
                        <label for="newCampDescription">Description</label>
                        <textarea class="form-control" type="text" name="campground[description]">
                            <%= campground.description %>
                        </textarea>    
                    </div>
                    <div class="col ml-2 mt-5">
                        <a href="/campgrounds/<%= campground.id %>" class="btn btn-outline-light">Back</a>
                        <button type="submit" class="btn btn-outline-info">Edit a camp</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4 col-sm-5 col-8 mt-4 align-self-top">
            <img class="img-fluid rounded-lg"
                src="https://images.unsplash.com/photo-1517771778436-39f5763f5270?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60"
                alt="">
        </div>
    </div>

</div>


<% include ../layout/footer %>