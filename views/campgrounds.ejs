<% include layout/header %>

<div class="jumbotron jumbotron-fluid bg-primary">
    <div class="container">
        <h1 class="text-center display-4">Welcome to YelpCamp</h1>
    </div>
</div>


<nav class="container nav nav-pills p-3 p-sm-5">
    <div class="nav-item"></div>
    <a class="nav-link m-2" href="/">Home</a>
    <a class="nav-link active m-2" href="/campgrounds">Campgrounds</a>
    <a class="nav-link border border-danger m-2" href="/new">Add new camp</a>
</nav>

<div class="container-fluid">
    <div class="row justify-content-center no-gutters">
        <% campgrounds.map((camp) => { %>
            <div class="col-11 col-sm-8 col-md-5 col-lg-3 card border-light bg-transparent m-2 ">  
                <img src=<%= camp.image %> class="img-fluid card-img-top"/>
                <div class="card-body">
                    <h5><%= camp.name %></h5>
                </div>
            </div>
        <% }) %>
    </div>
    
</div>

<% include layout/footer %>